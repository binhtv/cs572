{
  "extends": "../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ],
    "indent": [
      true,
      "tabs",
      4
    ],
    "htmlhint.options": {
      "attr-lowercase": false,
      "doctype-first": false
    },
  }
}
